<%- include('header') %>
<body class="animsition">
    <div class="page-wrapper">
        <div class="page-container">
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Admin Category View</h5>
                                    </div>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">id</th>
                                                <th scope="col">Category</th>
                                                <th scope="col">Delete</th>
                                                <th scope="col">Update</th>
                                                <th scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% data.map((val,index)=>{ %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= val.category %>
                                                    </td>
                                                    <td>
                                                        <a href="/DeleteData/<%= val.id %>" class="btn btn-danger">Delete</a>
                                                    </td>
                                                    <td>
                                                        <a href="/EditData/<%= val.id %>" class="btn btn-success">Edit</a>
                                                    </td>
                                                    <% if(val.status===1){ %>
                                                        <td>
                                                            <a href="/active/<%= val.id %>" class="btn btn-primary">Active</a>
                                                        </td>
                                                        <% } else{ %>
                                                            <td>
                                                                <a href="/deactive/<%= val.id %>"
                                                                    class="btn btn-warning">Deactive</a>
                                                            </td>
            
                                                            <% } %>
            
                                                </tr>
                                                <% }) %>
            
                                        </tbody>
                                    </table>
                                </div>
                                
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">User Category View</h5>
                                    </div>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">id</th>
                                                <th scope="col">Category</th>
            
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% data.map((val,index)=>{ %>
                                                <tr>
            
                                                    <% if(val.status===1) { %>
                                                        <td>
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td>
                                                            <%= val.category %>
                                                        </td>
                                                        <% } %>
            
            
            
                                                </tr>
                                                <% }) %>
            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
<%- include('footer') %>
